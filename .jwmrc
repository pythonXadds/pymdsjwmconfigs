<?xml version="1.0"?>
<JWM>

    <!-- The root menu. -->
    <RootMenu height="15" onroot="123"> 
        <Program icon="terminal.png" label="lxterminal">lxterminal</Program>
        <Menu icon="folder.png" label="Applications">
            <Program icon="code.png" label="gvim">gvim</Program>
            <Program icon="calculator.png" label="Calculator">xcalc</Program>
            <Program icon="xterm" label="xterm">xterm</Program>
            <Program icon="pcman.png" label="thunar">thunar</Program>
            <Program icon="www.png" label="Firefox">firefox</Program>
	    <Program icon="editor.png" label="XEdit">xedit</Program>
	    <Program icon="mousepad.png" label="mousepad">mousepad</program>
	    <Program icon="emacs.png" label="emacs">emacs</program>
        </Menu>
        <Menu icon="folder.png" label="Utilities">
            <Program icon="font.png" label="Fonts">xfontsel</Program>
            <Program icon="window.png" label="Window Properties">
                xprop | xmessage -file -
            </Program>
            <Program icon="window.png" label="Window Information">
                xwininfo | xmessage -file -
            </Program>
        </Menu>
        <Separator/>
        <Program icon="lock.png" label="Lock">
            xlock -mode blank
        </Program>
        <Separator/>
        <Restart label="Restart" icon="restart.png"/>
        <Exit label="Exit" confirm="true" icon="quit.png"/>
        <Include>exec: xdgmenumaker -n -i -f jwm</Include>
        
       <Program label="Refresh Menu">jwm -reload</Program>

    </RootMenu>

    <!-- Options for program groups. -->
    <Group>
        <Option>tiled</Option>
        <Option>aerosnap</Option>
    </Group>
    <Group>
        <Class>Pidgin</Class>
        <Option>sticky</Option>
    </Group>
    <Group>
        <Name>xterm</Name>
        <Option>vmax</Option>
    </Group>
    <Group>
        <Name>xclock</Name>
        <Option>drag</Option>
        <Option>notitle</Option>
    </Group>

    <!-- Tray at the bottom. -->
    <Tray x="0" y="-1" height="25" autohide="off">
	   
   
        <TrayButton icon="jwm-blue">root:1</TrayButton>
        <Spacer width="2"/>
        <TrayButton label="_">showdesktop</TrayButton>
        <Spacer width="1"/>

        <Pager labeled="true"/>

        <TaskList maxwidth="256"/>

        <Dock/>
        <Clock format="%H:%M"><Button mask="123">exec:xclock</Button></Clock>
            </Tray>

    <!-- Visual Styles -->
    <WindowStyle>
        <Font>consolas-9:bold</Font>
        <Width>4</Width>
        <Height>20</Height>
        <Corner>3</Corner>
        <Foreground>#FFFFFF</Foreground>
        <Background>#303030</Background>
        <Outline>#000000</Outline>
        <Opacity>0.5</Opacity>
        <Active>
            <Foreground>#FFFFFF</Foreground>
            <Background>#303030</Background>
            <Outline>#000000</Outline>
            <Opacity>1.0</Opacity>
        </Active>
    </WindowStyle>
    <TrayStyle group="true" list="all">
        <Font>consolas-9</Font>
        <Background>#303030</Background>
        <Foreground>#FFFFFF</Foreground>
        <Outline>#303030</Outline>
        <Opacity>0.75</Opacity>
    </TrayStyle>
    <TaskListStyle>
      <Font>consolas-9</Font>
      <Active>
        <Foreground>#FFFFFF</Foreground>
        <Background>#303030</Background>
      </Active>
      <Foreground>#FFFFFF</Foreground>
      <Background>#303030</Background>
    </TaskListStyle>
    <PagerStyle>
        <Outline>#000000</Outline>
        <Foreground>#555555</Foreground>
        <Background>#6D6D6D</Background>
        <Text>#FFFFFF</Text>
        <Active>
            <Foreground>#0077CC</Foreground>
            <Background>#303030</Background>
        </Active>
    </PagerStyle>
    <MenuStyle>
        <Font>consolas-11</Font>
        <Foreground>#FFFFFF</Foreground>
        <Background>#303030</Background>
        <Outline>#000000</Outline>
        <Active>
            <Foreground>#00FFFF</Foreground>
            <Background>#303030</Background>
        </Active>
        <Opacity>0.85</Opacity>
    </MenuStyle>
    <PopupStyle>
        <Font>consolas-9</Font>
        <Foreground>#000000</Foreground>
        <Background>#303030</Background>
    </PopupStyle>

    <!-- Path where icons can be found.
         IconPath can be listed multiple times to allow searching
         for icons in multiple paths.
      -->
    <IconPath>
        /usr/share/icons/wm-icons/32x32-aquafusion
    </IconPath>
    <IconPath>
        /usr/share/jwm
    </IconPath>

    <!-- Virtual Desktops -->
    <!-- Desktop tags can be contained within Desktops for desktop names. -->
    <Desktops width="4" height="1">
        <!-- Default background. Note that a Background tag can be
              contained within a Desktop tag to give a specific background
              for that desktop.
         -->
        <Background type="command">nitrogen --restore</Background>
		       </Desktops>

    <!-- Double click speed (in milliseconds) -->
    <DoubleClickSpeed>400</DoubleClickSpeed>

    <!-- Double click delta (in pixels) -->
    <DoubleClickDelta>2</DoubleClickDelta>

    <!-- The focus model (sloppy or click) -->
    <FocusModel>sloppy</FocusModel>

    <!-- The snap mode (none, screen, or border) -->
    <SnapMode distance="10">border</SnapMode>

    <!-- The move mode (outline or opaque) -->
    <MoveMode>opaque</MoveMode>

    <!-- The resize mode (outline or opaque) -->
    <ResizeMode>opaque</ResizeMode>

    <!-- Key bindings -->
    <Key key="Up">up</Key>
    <Key key="Down">down</Key>
    <Key key="Right">right</Key>
    <Key key="Left">left</Key>
    <Key key="h">left</Key>
    <Key key="j">down</Key>
    <Key key="k">up</Key>
    <Key key="l">right</Key>
    <Key key="Return">select</Key>
    <Key key="Escape">escape</Key>

    <Key mask="A" key="Tab">nextstacked</Key>
    <Key mask="A" key="F4">termite</Key>
    <Key mask="A" key="#l">desktop#</Key>
    <Key mask="A" key="F1">root:1</Key>
    <Key mask="A" key="F2">window</Key>
    <Key mask="A" key="F10">maximize</Key>
    <Key mask="A" key="Right">rdesktop</Key>
    <Key mask="A" key="Left">ldesktop</Key>
    <Key mask="A" key="Up">udesktop</Key>
    <Key mask="A" key="Down">ddesktop</Key>
    <Key mask="A" key="Return">exec:lxterminal</Key>
    <Key mask="A" key="X">exec: xkill</Key>
     <Key mask="A" key="t">exec: thunar</Key>
      <Key mask="A" key="e">exec: emacs</Key>
       <Key mask="A" key="q">close</Key>
       <Key mask="A" key="d">exec:dmenu_run -i -nb '#303030' -nf '#f5f1fb' -sb '#fea63c' -sf '#191919' -fn 'consolas:bold:pixelsize=12'</Key>
       <Key mask="A" key="r">exec:rofi -show run</key>
</JWM>
